---
import './pricing_style.css'
import FallFromTop from "@/components/interactive/fallFromTop.astro";
import Basic from './basic.astro';
import Custom from './custom.astro'; 
import Ecommerce from './ecommerce.astro';
import TopWave from '../borderComponents/wave-up.astro';
---
<!-- pricing-section -->
<section class="w-full bg-white text-center relative">
    <div class="w-10/12 mx-auto py-10">
        <h2
            class = "text-2xl md:text-3xl font-bold"    
        >Ready to take your business to the next level?</h2>
        <FallFromTop wrapperStyle = "mx-auto my-10">
            <h2
                class = "text-2xl md:text-3xl font-bold"
            ><span class = "text-slate-500">Explore</span>&nbsp;<span class = "text-[#5b87e4]">our packages</span></h2>
            <hr 
                class = "border-[#5b87e4] border-[1px] border-solid w-full"
            />
        </FallFromTop>

        <div class="flex flex-col md:flex-row mx-auto gap-[30px] lg:gap-0">
            <Ecommerce />
            <Basic />
            <Custom />
        </div>
    </div>
    <TopWave />
</section>

<!-- pricing-section end -->
